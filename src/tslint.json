{
    "extends": [
        "tslint:latest",
        "tslint-eslint-rules"
    ],
    "rules": {
        "prefer-const": false,
        "quotemark": [
            true,
            "single"
        ],
        "trailing-comma": false,
        "one-line": [
            true,
            "check-catch",
            "check-finally",
            "check-open-brace",
            "check-whitespace"
        ],
        "curly": [
            true,
            "ignore-same-line"
        ],
        "indent": [
            true,
            "tabs",
            4
        ],
        "ordered-imports": true,
        "newline-per-chained-call": [
            2
        ],
        "arrow-parens": false,
        "brace-style": [
            true,
            "stroustrup",
            {
                "allowSingleLine": true
            }
        ],
        "eofline": true,
        "space-in-parens": [
            "error",
            "always"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case",
            "allow-leading-underscore"
        ],
        "comment-format": [
            true,
            "check-space"
        ],
        "max-line-length": [
            true,
            120
        ],
        "only-arrow-functions": false,
        "no-empty-interface": false,
        "no-implicit-dependencies": false,
        "no-submodule-imports": false,
        "no-namespace": false,
        "no-unused-variable": true,
        "forin": false,
        "semicolon": true,
        "object-literal-sort-keys": true,
        "newline-before-return": true,
        "no-consecutive-blank-lines": true,
        "no-irregular-whitespace": true,
        "prefer-for-of": true,
        "no-console": true,
        "no-duplicate-variable": true,
        "no-empty": true,
        "no-var-keyword": true,
        "triple-equals": true,
        "completed-docs": [
            true,
            {
                "methods":{
                    "privacies": ["all"]
                },
                "classes": true,
                "functions":true
            }
        ],
        "interface-name": [true, "never-prefix"],
        "jsdoc-format": true
    }
}